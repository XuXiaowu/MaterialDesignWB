<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="80dp"
    android:layout_height="80dp">

    <truecolor.mdwb.view.ClickShadeImageView
        android:id="@+id/publish_statuese_photo_view"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:scaleType="centerCrop"
        android:background="@color/text_color_gray"
        app:shadeColor = "@color/text_color_gray"/>

    <truecolor.mdwb.view.ClickShadeImageView
        android:id="@+id/publish_statuese_photo_delete_view"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="right"
        android:src="@mipmap/publish_statuese_photo_item_delete_icon"
        android:background="?android:attr/selectableItemBackground"/>

</FrameLayout>
